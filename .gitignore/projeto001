            break;
            case 3:
            printf("Desculpa, essa opção ainda não está disponível :(");
            break;
            case 4:
            break;
            default
            printf("Escolha uma opcao valida, por favor!\n");
            scanf("%d",menu);
        }
         
    }
    return 0;
}
